@model BookReadingEventModel
@{ 
    ViewData["Title"] = "Add New Book Reading Event";
}

<div class="container h-100">
    <h3 class="display-4">Add New Book Reading Event</h3>
    <h5>Fields marked with * are required.</h5>
    <div class="row h-100 justify-content-lg-start align-items-center">
        <div class="col-10 col-md-8 col-lg-6">
            @if (ViewBag.isSuccess == true)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>New event Added Successfully</strong> You should check in on some of those fields below.
                    <a asp-controller="bookreadingevent" asp-action="getbookreadingeventbytitle" asp-route-title="@ViewBag.booktitle">Click here</a>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form method="post" asp-controller="bookreadingevent" asp-action="AddBookReadingEvent">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Date"></label>
                    <input asp-for="Date" type="date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Location"></label>
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartTime"></label>
                    <select asp-for="StartTime" type="time" class="form-control" asp-items="ViewBag.startTime">
                        <option value="">Please select start time for event</option>
                    </select>
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Type">Event Type</label>
                    <input asp-for="Type" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Duration"></label>
                    <input asp-for="Duration" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="Other"></label>
                    <input asp-for="Other" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="InviteByMail"></label>
                    <input asp-for="InviteByMail" class="form-control" />
                </div>
                <br />
                <div>
                    <button type="submit" value="Add Event" class="btn btn-outline-primary">Add Event</button>
                </div>
            </form>
        </div>
    </div>
</div>
